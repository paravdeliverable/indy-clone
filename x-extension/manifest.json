{
  "manifest_version": 3,
  "name": "X (Twitter) Extension",
  "version": "1.0.0",
  "description": "A distributable tool to automate X (Twitter) to scrap required data",
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "activeTab",
    "windows",
    "notifications",
    "devtools",
    "startup",
    "webRequest",
    "webRequestBlocking",
    "webRequestAuthProvider"
  ],
  "incognito": "spanning",
  "host_permissions": [
    "<all_urls>",
    "devtools://devtools/*",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["content.js"],
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["constants.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://* http://*"
  }
}
